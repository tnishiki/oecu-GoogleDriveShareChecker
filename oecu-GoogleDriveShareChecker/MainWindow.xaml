<Window x:Class="oecu_GoogleDriveShareChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oecu_GoogleDriveShareChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1700" Background="#3C3C3C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Google Drive ファイル共有チェッカー" FontSize="16" Background="WhiteSmoke"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*" MinHeight="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="35*" MinHeight="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="35*" MinHeight="150"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#4A4A4A">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="管理ドメイン" Background="#D9D9D9"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Content="ドメインの追加" Padding="10,0,10,0" HorizontalAlignment="Right"/>
                        <Button Grid.Column="2" Content="ドメインの編集" Padding="10,0,10,0" HorizontalAlignment="Right"/>
                    </Grid>
                    <ListBox Grid.Row="2" ItemsSource="{Binding ServiceAccountList}" DisplayMemberPath="ServiceAccountEmail" SelectedItem="{Binding SelectedAccount, Mode=TwoWay}" Foreground="White" Background="#1E1E1E">
                    </ListBox>
                </Grid>
                <GridSplitter Grid.Row="1" Height="5" Background="#5A5A5A" HorizontalAlignment="Stretch" VerticalAlignment="Center" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" ShowsPreview="True" Cursor="SizeNS"/>
                <Grid Grid.Row="2" Background="#BFBFBF">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="組織ツリー"  Background="#D9D9D9" TextAlignment="Left"/>
                    <Button Grid.Row="1" Content="更新" Width="120" HorizontalAlignment="Right"/>
                    <TreeView Grid.Row="2" ItemsSource="{Binding TreeItems}" Foreground="White" Background="#1E1E1E">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Name}" />
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
                <GridSplitter Grid.Row="3" Height="5" Background="#5A5A5A" HorizontalAlignment="Stretch" VerticalAlignment="Center" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" ShowsPreview="True" Cursor="SizeNS"/>
                <Grid Grid.Row="4" Background="#BFBFBF" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="共有ドライブ"  Background="#D9D9D9" TextAlignment="Left"/>
                    <Button Grid.Row="1" Content="更新" Width="120" HorizontalAlignment="Right"/>
                    <ListBox ItemsSource="{Binding ShareDriveItems}" Foreground="White" Background="#1E1E1E" Margin="0,39,0,1" Grid.RowSpan="2"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
