<Window x:Class="oecu_GoogleDriveShareChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oecu_GoogleDriveShareChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200" Background="#3C3C3C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Google Drive ファイル共有チェッカー" FontSize="16" Background="WhiteSmoke"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30*" MinHeight="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="35*" MinHeight="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="35*" MinHeight="150"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#4A4A4A">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="管理ドメイン" Background="#D9D9D9"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Content="ドメインの追加" Command="{Binding CreateNewServiceAccountCommand}" Padding="10,0,10,0" HorizontalAlignment="Right"/>
                        <Button Grid.Column="2" Content="ドメインの編集" Command="{Binding ModifyServiceAccountCommand}" Padding="10,0,10,0" HorizontalAlignment="Right"/>
                    </Grid>
                    <ListBox Grid.Row="2" ItemsSource="{Binding ServiceAccountList}" DisplayMemberPath="ServiceAccountEmail" SelectedItem="{Binding SelectedAccount, Mode=TwoWay}" SelectionChanged="DomainListbox_SelectionChanged" Foreground="White" Background="#1E1E1E"/>
                </Grid>
                <GridSplitter Grid.Row="1" Height="5" Background="#5A5A5A" HorizontalAlignment="Stretch" VerticalAlignment="Center" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" ShowsPreview="True" Cursor="SizeNS"/>
                <Grid Grid.Row="2" Background="#BFBFBF">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="組織ツリー"  Background="#D9D9D9" TextAlignment="Left"/>
                    <Button Grid.Row="1" Content="更新" Width="120" HorizontalAlignment="Right" Command="{Binding ReloadOrgTreeCommand}"/>
                    <TreeView Grid.Row="2" ItemsSource="{Binding OrganizationTree}" Background="#FF1E1E1E">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Name}" Foreground="White"/>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
                <GridSplitter Grid.Row="3" Height="5" Foreground="White" Background="#5A5A5A" HorizontalAlignment="Stretch" VerticalAlignment="Center" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" ShowsPreview="True" Cursor="SizeNS"/>
                <Grid Grid.Row="4" Background="#BFBFBF" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="共有ドライブ"  Background="#D9D9D9" TextAlignment="Left"/>
                    <Button Grid.Row="1" Content="更新" Width="120" HorizontalAlignment="Right"/>
                    <ListBox ItemsSource="{Binding ShareDriveList}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedShareDrive, Mode=TwoWay}" Foreground="White" Background="#1E1E1E" Margin="0,39,0,1" Grid.RowSpan="2"/>
                </Grid>
            </Grid>
            <GridSplitter Grid.Column="1" Width="5" Background="#5A5A5A" VerticalAlignment="Stretch" HorizontalAlignment="Center" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" ShowsPreview="True" Cursor="SizeNS"/>
            <Grid Grid.Column="2">
                <DataGrid ItemsSource="{Binding AccountList}" IsReadOnly="True" AutoGenerateColumns="False" Background="#FF1E1E1E" HeadersVisibility="Column" SelectedCellsChanged="Account_SelectedCellChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="アカウント" Binding="{Binding Account}" Width="120">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#FF1F1F1F"/>
                                    <Setter Property="BorderBrush" Value="#FF1F1F1F"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#203D4B"/>
                                            <Setter Property="BorderBrush" Value="#26A0DA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="名前" Binding="{Binding UserName}" Width="220*">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#FF1F1F1F"/>
                                    <Setter Property="BorderBrush" Value="#FF1F1F1F"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#203D4B"/>
                                            <Setter Property="BorderBrush" Value="#26A0DA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <GridSplitter Grid.Column="3" Width="5" Background="#5A5A5A" VerticalAlignment="Stretch" HorizontalAlignment="Center" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" ShowsPreview="True" Cursor="SizeNS"/>
            <Grid Grid.Column="4" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Content="更新" Width="120" Height="30"/>
                </Grid>
                <DataGrid Grid.Row="1" ItemsSource="{Binding ItemList}" IsReadOnly="True" AutoGenerateColumns="False" Background="#FF1E1E1E" HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="アイテム名" Binding="{Binding ItemName}" Width="120">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#FF1F1F1F"/>
                                    <Setter Property="BorderBrush" Value="#FF1F1F1F"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#203D4B"/>
                                            <Setter Property="BorderBrush" Value="#26A0DA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="URL" Binding="{Binding ItemUrl}" Width="220*">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#FF1F1F1F"/>
                                    <Setter Property="BorderBrush" Value="#FF1F1F1F"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#203D4B"/>
                                            <Setter Property="BorderBrush" Value="#26A0DA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
