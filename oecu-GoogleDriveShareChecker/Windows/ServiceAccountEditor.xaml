<Window x:Class="oecu_GoogleDriveShareChecker.Windows.ServiceAccountEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="サービスアカウントの編集"
        Height="330" Width="480"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="#f4f4f4">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 入力フォーム -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="サービスアカウント名" Margin="0,0,0,4" FontWeight="SemiBold" />
            <TextBox Height="30" Text="{Binding ServiceAccountEmail}" Margin="0,0,0,12" />

            <TextBlock Text="JSON ファイル内容" Margin="0,0,0,4" FontWeight="SemiBold" />
            <TextBox Height="120" Text="{Binding Json}" AcceptsReturn="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Visible" PreviewDragOver="TbJsonText_PreviewDragOver"
                 Drop="TbJsonText_Drop"/>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="キャンセル" Command="{Binding CancelCommand}" Width="90" Height="30" Margin="0,0,10,0" />
            <Button Content="内容チェック" Command="{Binding CheckKeyCommand}" Width="90" Height="30" Margin="0,0,10,0"/>
            <Button Content="保存" Command="{Binding AcceptCommand}" IsEnabled="{Binding CanSave}" Width="90" Height="30" />
        </StackPanel>
    </Grid>
</Window>
